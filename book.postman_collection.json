		{
			"name": "API Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"//parse the response into JS Object\r",
							"const response = pm.response.json();\r",
							"\r",
							"console.log(response);\r",
							"//dot or bracket notation to access what we want to test\r",
							"console.log(response.status);\r",
							"console.log(response['status']);\r",
							"\r",
							"// take two params\r",
							"// name of test, callback function\r",
							"pm.test(\"Status should be OK\", () => {\r",
							"    pm.expect(response.status).to.eql(\"OK\");\r",
							"});\r",
							"\r",
							"//set execution order\r",
							"//skip to listed test\r",
							"//postman.setNextRequest(\"List of books\");\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
